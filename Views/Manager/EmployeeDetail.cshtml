@model TheJunction.ViewModels.EmployeeViewModel
@{

    ViewBag.Title = "Employee Detail";
}<!--
    TODO:
    validation
    post
    put
    delete //no delete, just IsActive: true/false

-->

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address1"></label>
            <input type="text" asp-for="Address1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address2"></label>
            <input type="text" asp-for="Address2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input type="text" asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="State"></label>
            <input type="text" asp-for="State" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Zip"></label>
            <input type="text" asp-for="Zip" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="CellNumber"></label>
            <input type="text" asp-for="CellNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CellCarrierId"></label>
            @Html.DropDownListFor(@model => @model.CellCarrierId, Model.CellCarrierList, "- please select -", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="IsActive"></label>
            <input type="checkbox" asp-for="IsActive" />
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-group" align="center">
            @*TODO: wire up save*@
            <input type="submit" value="Save" class="btn btn-primary" />

            <a class="btn btn-default" asp-controller="Manager" asp-action="Employee">Cancel</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            Created: @Model.Created
        </div>
    </div>
    <div class="col-md-3" align="center">
        <div class="form-group">
            Created By: @Model.CreatedByName
        </div>
    </div>
    <div class="col-md-3" align="right">
        <div class="form-group">
            Last Modified: @Model.Modified
        </div>
    </div>
    <div class="col-md-3" align="right">
        <div class="form-group">
            Last Modified By: @Model.ModifiedByName
        </div>
    </div>
</div>
