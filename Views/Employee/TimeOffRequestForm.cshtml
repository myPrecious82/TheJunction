<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Created"></label>
            <input type="text" asp-for="Created" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="EmployeeId"></label>
            <input type="text" asp-for="EmployeeId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Reason"></label>
            <input type="text" asp-for="Reason" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="RequestedDate"></label>
            <input type="text" asp-for="RequestedDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TimeNeeded"></label>
            <input type="text" asp-for="TimeNeeded" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Explanation"></label>
            <input type="text" asp-for="Explanation" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group" align="center">
            <p>
                Please give us at least <strong>3 weeks notice</strong>. Time off will be approved based on priority of the request
                and on a first come, first serve basis. We cannot guarantee that all requests will be granted. Thank you for your cooperation.
                </p>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-group" align="center">
            <input type="submit" value="Save" class="btn btn-primary" />
            <button class="btn btn-default">Cancel</button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            Created: @Model.Created
        </div>
    </div>
    <div class="col-md-3" align="center">
        <div class="form-group">
            Created By: @Model.CreatedBy
        </div>
    </div>
    <div class="col-md-3" align="right">
        <div class="form-group">
            Last Modified: @Model.Modified
        </div>
    </div>
    <div class="col-md-3" align="right">
        <div class="form-group">
            Last Modified By: @Model.ModifiedBy
        </div>
    </div>
</div>
